<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gqueiroz.presentation">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="OpenWallet"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.gqueiroz.presentation.MainActivity"
            android:label="">
        </activity>

        <activity
            android:name="com.gqueiroz.presentation.ItemActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.gqueiroz.presentation.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gqueiroz.presentation.MainActivity" />

        </activity>

        <activity
            android:name="com.gqueiroz.presentation.ItemAddRemActivity"
            android:label="@string/title_activity_item_add_rem"
            android:parentActivityName="com.gqueiroz.presentation.MainActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gqueiroz.presentation.MainActivity" />
        </activity>

        <activity
            android:name="com.gqueiroz.presentation.ItemNovoActivity"
            android:label="@string/title_activity_item_novo"
            android:parentActivityName="com.gqueiroz.presentation.MainActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gqueiroz.presentation.MainActivity" />
        </activity>

    </application>

</manifest>
