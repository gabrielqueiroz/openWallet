<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gqueiroz.openwallet.ItemActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_actionbar" />

    <GridLayout
        android:id="@+id/itemBackground"
        android:layout_below="@id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:rowCount="5"
        android:columnCount="2">

        <ImageView
            android:id="@+id/itemIcon"
            android:src="@drawable/ic_help_white_48dp"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_rowSpan="3"
            android:layout_column="0"
            android:layout_columnWeight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TOTAL"
            android:textColor="@color/textColorPrimary"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1"/>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_row="1"
            card_view:cardBackgroundColor="@color/verdeDark"
            card_view:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/totalIncomes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="+ R$ 0.00"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_row="2"
            card_view:cardBackgroundColor="@color/vermelhoDark"
            card_view:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/totalOutcomes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="- R$ 0.00"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_row="3"
            card_view:cardBackgroundColor="@color/colorPrimaryDark"
            card_view:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/totalValue"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="= R$ 0.00"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="3"
            card_view:cardBackgroundColor="@color/colorPrimaryDark"
            card_view:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/monthSelected"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="Month"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp" />

        </android.support.v7.widget.CardView>

        <Space
            android:layout_height="10dp"
            android:layout_columnSpan="2"
            android:layout_row="4" />

    </GridLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewHistory"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/itemBackground"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        android:scrollbars="vertical" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multipleActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:elevation="10dp"
        fab:fab_addButtonColorNormal="@color/colorAccent"
        fab:fab_addButtonColorPressed="@color/colorAccentRipple"
        fab:fab_addButtonPlusIconColor="@color/textColorPrimary"
        fab:fab_labelStyle="@style/menu_labels_style">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/actionDebit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/vermelho"
            fab:fab_colorPressed="@color/vermelhoDark"
            fab:fab_icon="@drawable/ic_vertical_align_bottom_white_24dp"
            fab:fab_size="mini"
            fab:fab_title="Remover" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/actionCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/verde"
            fab:fab_colorPressed="@color/verdeDark"
            fab:fab_icon="@drawable/ic_vertical_align_top_white_24dp"
            fab:fab_size="mini"
            fab:fab_title="Adicionar" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</RelativeLayout>
