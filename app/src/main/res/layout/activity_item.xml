<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gqueiroz.openwallet.ItemActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_actionbar" />

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/itemCard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_margin="10dp"
        android:elevation="9dp"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:id="@+id/relativeCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <LinearLayout
                android:id="@+id/backgroundOpcoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/backgroundItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/itemImagem"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_help_white_48dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/backgroundOpcoes"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/itemNome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:text="Carteira"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/itemValor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/itemNome"
                        android:ellipsize="end"
                        android:text="R$ 0.00"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemCard"
        android:layout_margin="10dp"
        android:elevation="9dp"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/backgroundHistory"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/labelHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="Histórico de Transações"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColorPrimary"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/emptyHistory"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/ic_insert_comment_black_48dp"
                    android:tint="@android:color/darker_gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Não existe historico para este item" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewHistory"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:padding="5dp"
                android:layout_marginBottom="15dp"
                android:scrollbars="vertical" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
    a

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multipleActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:elevation="10dp"
        fab:fab_addButtonColorNormal="@color/colorAccent"
        fab:fab_addButtonColorPressed="@color/colorAccentRipple"
        fab:fab_addButtonPlusIconColor="@color/textColorPrimary"
        fab:fab_labelStyle="@style/menu_labels_style">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/actionDebit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/vermelhoGrad"
            fab:fab_colorPressed="@color/vermelhoGradDark"
            fab:fab_icon="@drawable/ic_vertical_align_bottom_white_24dp"
            fab:fab_size="mini"
            fab:fab_title="Remover" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/actionCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/verdeGrad"
            fab:fab_colorPressed="@color/verdeGradDark"
            fab:fab_icon="@drawable/ic_vertical_align_top_white_24dp"
            fab:fab_size="mini"
            fab:fab_title="Adicionar" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>
